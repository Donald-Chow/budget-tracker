<table class="w-full py-2">
  <thead>
    <tr class="border-b">
      <th class="text-left w-1/3">Name</th>
      <th class="text-right w-1/3">Category</th>
      <th class="text-right w-1/3">Amount</th>
    </tr>
  </thead>
  <tbody>
    <% items.each do |item| %>
      <tr class="">
        <td class="font-medium w-1/3"><%= item.name %></td>
        <td class="text-right w-1/3"><%= item.category.name %></td>
        <td class="text-right w-1/3"><%= number_to_currency(item.amount, unit: '¥', precision: 0) %></td>
      </tr>
    <% end %>
    <tr class="border-t">
      <td class="font-medium w-1/3"></td>
      <td class="text-right font-medium w-1/3">Total</td>
      <td class="text-right w-1/3"><%= number_to_currency(items.sum(&:amount), unit: '¥', precision: 0) %></td>
    </tr>
  </tbody>
</table>
