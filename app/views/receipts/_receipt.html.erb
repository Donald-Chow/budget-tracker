<div id="<%= dom_id receipt %>">

  <div class="mx-auto w-full flex p-4 gap-2">
    <%  if receipt.photo.attached? %>
      <%= cl_image_tag(receipt.photo.key, width: 192, height: 192, crop: "fill") %>
    <% else %>
      <div class="w-48 h-48 bg-gray-500"></div>
    <% end %>

    <div class="grow">
      <h1 class="font-bold text-4xl"><%= receipt.store %></h1>
      <div class="flex justify-between">
        <h1 class="font-bold text-4xl"><%= receipt.date.strftime('%Y-%m-%d') %></h1>
        <h1 class="font-bold text-4xl"><%= number_to_currency(receipt.items.sum(:amount), unit: 'Â¥', precision: 0) %></h1>
      </div>
      <div class="mt-4">
        <%= render 'items/items', items: receipt.items %>
      </div>
    </div>
  </div>

</div>
