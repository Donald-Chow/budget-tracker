<div class="w-full p-4 ">
  <h1 class="font-bold text-4xl">Budget</h1>
  <p>This month's budget</p>
  <%= pie_chart @items.joins(:category).group('categories.name').sum(:amount), title: "This month's spending" %>
  <%= bar_chart @bar_chart_data, stacked: true, library: {
    scales: {
      x: { stacked: true },
      y: {
        stacked: true
      }
    }
  } %>

</div>
