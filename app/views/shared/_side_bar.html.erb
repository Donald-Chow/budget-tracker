<div class="w-1/3 p-4 bg-gray-200 ">
  <%= link_to "Budget Tracker", root_path, class: "rounded-lg py-3 px-5 bg-pink-800 text-white block font-medium" %>

  <div class="py-4">
    <%= link_to receipts_path do %>
      <h2 class="font-bold text-2xl pb-4">Receipt</h2>
    <% end %>
    <%= link_to "New receipt", new_receipt_path, class: "rounded-lg py-3 px-5 bg-indigo-800 text-white block font-medium" %>
    <%= link_to "New receipt by Photo", new_photo_receipt_path, class: "rounded-lg py-3 px-5 bg-indigo-800 text-white block font-medium" %>
  </div>

  <div class="py-4">
    <%= link_to categories_path do %>
      <h2 class="font-bold text-2xl pb-4">Categories</h2>
    <% end %>
    <ul class="pb-2">
      <% categories.each do |category| %>
        <li><%= link_to category.name, category %></li>
      <% end %>
    </ul>
    <%= link_to "New category", new_category_path, class: "rounded-lg py-3 px-5 bg-gray-400 text-white block font-medium" %>
  </div>
</div>
